<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jayfella.sdk.controller.list.PostProcessorItem">
   <children>
      <CheckBox fx:id="checkBox" mnemonicParsing="false" HBox.hgrow="NEVER" />
      <Label fx:id="label" maxWidth="1.7976931348623157E308" text="Label" HBox.hgrow="ALWAYS" />
      <Button fx:id="configButton" mnemonicParsing="false" style="-fx-padding: 3; -fx-background-radius: 1em;" HBox.hgrow="NEVER">
          <graphic>
              <ImageView preserveRatio="true"> 
                  <Image url="@../../Icons/cog-solid.png" />
              </ImageView>
          </graphic>
         <tooltip>
            <Tooltip text="Configure" />
         </tooltip>
      </Button>
   </children>
</HBox>
